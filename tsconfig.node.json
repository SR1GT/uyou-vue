{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/http/",
  ],
  // "compilerOptions": {
  //   "composite": true,
  //   "noEmit": true,
  //   "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

  //   "module": "ESNext",
  //   "moduleResolution": "Bundler",
  //   "types": ["node"]
  // }
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "outDir": "dist"
  },
}
